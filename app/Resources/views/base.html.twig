<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Evidencia astronautov{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

    <nav class="nav navbar-default">
        <ul class="nav navbar-nav">
            <li><a class="btn" href="{{ path('show_astronauts') }}">Astronauti</a></li>
            <li><a class="btn" href="{{ path('show_superpowers') }}">Superschopnosti</a></li>
        </ul>
    </nav>



    <ul>
        {% for message in app.session.flashBag.get('success') %}
            <li class="text-success">{{ message }}</li>
        {% endfor %}
        {% for message in app.session.flashBag.get('failure') %}
            <li class="text-danger">{{ message }}</li>
        {% endfor %}
    </ul>
    <div class="container">
        {% block body %}{% endblock %}
    </div>

        {% block javascripts %}
            <script src="{{ asset('assets/javascript/jquery-3.1.1.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
